    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const accordionHeaders = document.querySelectorAll(".info");
        const accordionContents = document.querySelectorAll(".challenge-description");
    
        accordionHeaders.forEach((header) => {
            header.addEventListener("click", () => {
                const accordionItem = header.parentElement;
                const accordionContent = accordionItem.querySelector(".challenge-description");
    
                // Close all other accordion contents
                accordionContents.forEach((content) => {
                    if (content !== accordionContent) {
                        content.classList.remove("active");
                        content.style.maxHeight = "0";
                    }
                });
    
                // Toggle the clicked one
                accordionContent.classList.toggle("active");
    
                if (accordionContent.classList.contains("active")) {
                    accordionContent.style.maxHeight = accordionContent.scrollHeight + "px";
                } else {
                    accordionContent.style.maxHeight = "0";
                }
            });
        });
    });
    

      let counter = 0;

      function updateCounter() {
        document.querySelector(".vote_counter").innerHTML = counter;
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .querySelector(".upvote")
          .addEventListener("click", function () {
            counter++;
            updateCounter();
          });

        document
          .querySelector(".downvote")
          .addEventListener("click", function () {
            counter--;
            updateCounter();
          });
      });
    </script>
